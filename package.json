{
    "name": "syxbot",
    "version": "0.5.0",
    "description": "",
    "scripts": {
        "eslint": "yarn eslint ./",
        "test": "yarn mocha ./test/runner.js --exit",
        "start-log": "yarn npm-run-all build server log-prod",
        "start": "yarn npm-run-all build server",
        "server": "pm2 start dist/index.js --name syxbot_prod",
        "build": "npm-run-all clean transpile",
        "transpile": "yarn tsc",
        "dev": "yarn rimraf dist && yarn tsc && yarn concurrently \"yarn tsc --watch\" \"yarn pm2 start dist/index.js --watch --name syxbot_dev\" \"npm run log-dev\"",
        "log-prod": "yarn pm2 log --lines 100 syxbot_prod",
        "log-dev": "yarn pm2 log --lines 100 syxbot_dev",
        "status": "yarn pm2 status",
        "stop-prod": "yarn pm2 stop syxbot_prod",
        "stop-dev": "yarn pm2 stop syxbot_dev",
        "stop-all": "yarn pm2 stop all",
        "clean": "rimraf dist",
        "remove-modules": "yarn rimraf node_modules .yarn/build-state.yml .yarn/cache .yarn/install-state.gz .yarn/unplugged .pnp.js yarn.lock package-lock.json"
    },
    "private": true,
    "author": "Tom Rooman",
    "license": "GPL-3.0-only",
    "dependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.10.5",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@babel/runtime": "^7.10.5",
        "@discordjs/opus": "^0.3.2",
        "axios": "^0.19.2",
        "convert-svg-to-png": "^0.5.0",
        "dateformat": "^3.0.3",
        "discord.js": "^12.2.0",
        "ffmpeg-static": "^4.2.5",
        "lodash": "^4.17.19",
        "mongoose": "^5.9.24",
        "npm-run-all": "^4.1.5",
        "pm2": "^4.4.0",
        "rimraf": "^3.0.2",
        "twit": "^2.2.11",
        "ytdl-core": "^3.1.2",
        "ytpl": "^0.1.22",
        "ytsr": "^0.1.15"
    },
    "devDependencies": {
        "@types/node": "^14.0.25",
        "concurrently": "^5.2.0",
        "eslint": "^7.4.0",
        "mocha": "^8.0.1",
        "typescript": "^3.9.7"
    }
}