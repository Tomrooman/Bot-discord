{
    "name": "syxbot",
    "version": "0.5.0",
    "description": "",
    "private": true,
    "author": "Tom Rooman",
    "scripts": {
        "eslint": "eslint ./",
        "test": "yarn mocha ./test/runner.js --exit",
        "start-log": "yarn build && yarn server && yarn log-prod",
        "start": "yarn build && yarn server",
        "start:container:log": "yarn start:container && yarn shell:container",
        "start:container": "docker run --network=host --restart=always -d --name syxbot syxbot",
        "shell:container": "docker exec -it syxbot sh",
        "build:container": "docker image prune -f && yarn cp:master:config && docker build -t syxbot . && yarn cp:dev:config",
        "tag:container": "docker tag syxbot syxbot.com:5000/syxbot",
        "push:container": "docker push syxbot.com:5000/syxbot",
        "deploy:container": "yarn build:container && yarn tag:container && yarn push:container",
        "server": "pm2 start dist/index.js --name syxbot_prod",
        "build": "yarn clean && yarn transpile",
        "cp:master:config": "rm config.json && cp 'private/config - master.json' ./ && mv 'config - master.json' config.json",
        "cp:dev:config": "rm config.json && cp 'private/config - dev.json' ./ && mv 'config - dev.json' config.json",
        "transpile": "yarn tsc",
        "dev": "yarn ts-node-dev --respawn --transpile-only --clear index.ts",
        "log-prod": "yarn pm2 log --lines 100 syxbot_prod",
        "log-dev": "yarn pm2 log --lines 100 syxbot_dev",
        "status": "yarn pm2 status",
        "stop:mongo": "docker stop mongoDB && docker container rm mongoDB",
        "start:mongo": "docker run -p 27017:27017 -v /data/db:/data/db -d --restart=always --name mongoDB mongo mongod --auth",
        "stop-prod": "yarn pm2 stop syxbot_prod",
        "stop-dev": "yarn pm2 stop syxbot_dev",
        "stop-all": "yarn pm2 stop all",
        "stop:container": "docker stop syxbot && docker container rm syxbot",
        "clean": "rm -rf dist/",
        "remove:container": "docker rm $(docker ps -a -q)",
        "remove:untagged": "docker rmi -f $(docker images | grep '<none>')",
        "remove-modules": "rm -rf node_modules .yarn/build-state.yml .yarn/cache .yarn/install-state.gz .yarn/unplugged .pnp.js yarn.lock package-lock.json"
    },
    "dependencies": {
        "@discordjs/opus": "^0.3.2",
        "@typescript-eslint/parser": "^4.4.0",
        "axios": "^0.20.0",
        "chalk": "^4.1.0",
        "convert-svg-to-png": "^0.5.0",
        "dateformat": "^3.0.3",
        "discord.js": "^12.3.1",
        "ffmpeg-static": "^4.2.7",
        "lodash": "^4.17.20",
        "mongoose": "^5.10.9",
        "pm2": "^4.5.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "twit": "^2.2.11",
        "ytdl-core": "^3.3.0",
        "ytpl": "^1.0.1",
        "ytsr": "^1.0.4"
    },
    "devDependencies": {
        "@types/dateformat": "^3.0.1",
        "@types/lodash": "^4.14.162",
        "@types/mocha": "^8.0.3",
        "@types/mongoose": "^5.7.36",
        "@types/node": "^14.11.8",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "eslint": "^7.11.0",
        "mocha": "^8.1.3",
        "typescript": "^4.0.3"
    }
}
