{
    "name": "syxbot",
    "version": "0.5.0",
    "description": "",
    "private": true,
    "author": "Tom Rooman",
    "scripts": {
        "eslint": "yarn eslint ./",
        "test": "yarn mocha ./test/runner.js --exit",
        "start-log": "yarn npm-run-all build server log-prod",
        "start": "yarn npm-run-all build server",
        "server": "pm2 start dist/index.js --name syxbot_prod",
        "build": "npm-run-all clean transpile",
        "transpile": "yarn tsc",
        "dev": "yarn rimraf dist && yarn ts-node-dev --respawn --transpile-only --clear index.ts",
        "log-prod": "yarn pm2 log --lines 100 syxbot_prod",
        "log-dev": "yarn pm2 log --lines 100 syxbot_dev",
        "status": "yarn pm2 status",
        "stop-prod": "yarn pm2 stop syxbot_prod",
        "stop-dev": "yarn pm2 stop syxbot_dev",
        "stop-all": "yarn pm2 stop all",
        "clean": "rimraf dist",
        "remove-modules": "yarn rimraf node_modules .yarn/build-state.yml .yarn/cache .yarn/install-state.gz .yarn/unplugged .pnp.js yarn.lock package-lock.json"
    },
    "dependencies": {
        "@discordjs/opus": "^0.3.2",
        "axios": "^0.19.2",
        "chalk": "^4.1.0",
        "convert-svg-to-png": "^0.5.0",
        "dateformat": "^3.0.3",
        "discord.js": "^12.2.0",
        "ffmpeg-static": "^4.2.6",
        "lodash": "^4.17.19",
        "mongoose": "^5.9.25",
        "npm-run-all": "^4.1.5",
        "pm2": "^4.4.0",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^1.0.0-pre.56",
        "twit": "^2.2.11",
        "ytdl-core": "^3.1.3",
        "ytpl": "0.2.1",
        "ytsr": "0.1.18"
    },
    "devDependencies": {
        "@types/dateformat": "^3.0.1",
        "@types/lodash": "^4.14.158",
        "@types/mocha": "^8.0.0",
        "@types/mongoose": "^5.7.32",
        "@types/node": "^14.0.26",
        "@typescript-eslint/eslint-plugin": "^3.7.0",
        "@typescript-eslint/parser": "^3.7.0",
        "concurrently": "^5.2.0",
        "eslint": "^7.5.0",
        "mocha": "^8.0.1",
        "typescript": "^3.9.7"
    }
}
