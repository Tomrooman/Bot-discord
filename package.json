{
    "name": "syxbot",
    "version": "0.5.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "eslint": "./node_modules/.bin/eslint ./",
        "test": "mocha --require @babel/register ./tests/index.test.js --exit",
        "start": "npm-run-all build server",
        "server": "pm2 start dist/index.js --interpreter babel-node --name syxbot_prod",
        "build": "npm-run-all clean transpile clean-unusable",
        "transpile": "babel ./ --out-dir dist --copy-files --ignore node_modules,UPDATER.js,babel.config.json,package.json,yarn.lock,package-lock.json",
        "dev": "pm2 start index.js --ignore-watch='node_modules audio' --watch --interpreter babel-node --name syxbot_dev && npm run log-dev",
        "log-prod": "pm2 log --lines 100 syxbot_prod",
        "log-dev": "pm2 log --lines 100 syxbot_dev",
        "status": "pm2 status",
        "stop-prod": "pm2 stop syxbot_prod",
        "stop-dev": "pm2 stop syxbot_dev",
        "stop-all": "pm2 stop all",
        "clean": "rimraf dist",
        "remove-modules": "rimraf .yarn/build-state.yml .yarn/cache .yarn/install-state.gz .yarn/unplugged .pnp.js yarn.lock package-lock.json",
        "clean-unusable": "rimraf dist/node_modules dist/UPDATER.js dist/babel.config.json dist/package.json dist/yarn.lock dist/package-lock.json dist/.circleci dist/private",
        "mongodb": "sudo service mongod start"
    },
    "private": true,
    "author": "Tom Rooman",
    "license": "GPL-3.0-only",
    "dependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.10.5",
        "@babel/node": "^7.10.5",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@babel/register": "^7.10.5",
        "@discordjs/opus": "^0.3.2",
        "@google-cloud/speech": "^4.1.1",
        "axios": "^0.19.2",
        "convert-svg-to-png": "^0.5.0",
        "dateformat": "^3.0.3",
        "discord.js": "^12.2.0",
        "ffmpeg-static": "^4.2.5",
        "lodash": "^4.17.19",
        "mongoose": "^5.9.24",
        "npm-run-all": "^4.1.5",
        "pm2": "^4.4.0",
        "rimraf": "^3.0.2",
        "twit": "^2.2.11",
        "wav": "^1.0.2",
        "ytdl-core": "^3.1.2",
        "ytpl": "^0.1.22",
        "ytsr": "^0.1.15"
    },
    "devDependencies": {
        "eslint": "^7.4.0",
        "mocha": "^8.0.1"
    }
}
