{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "./index.ts",
    "./lib/**/*"
  ],
  "exclude": [
    ".yarn",
    "node_modules/",
    "**/*.spec.ts",
    "node_modules/ytsr/index.d.ts"
  ]
}